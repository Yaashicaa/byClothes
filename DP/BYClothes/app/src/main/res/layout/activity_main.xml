<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/profile_pic_ID"
        android:layout_marginTop="100dp"
        android:onClick="showProducts"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_name_ID"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_mail_ID"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorBlack"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        android:textColor="@color/colorBlack"
        android:layout_gravity="center_horizontal"
        android:textSize="22dp"
        android:layout_marginTop="30dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_BTN_ID"
            android:textAllCaps="false"
            android:text="Login"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/buttons"
            android:textColor="@color/colorWhite"
            android:onClick="loginPage"
            android:layout_marginLeft="75dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signUp_BTN_ID"
            android:textAllCaps="false"
            android:text="Sign Up"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="80dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/buttons"
            android:textColor="@color/colorWhite"
            android:onClick="signUpActivity"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin ?"
        android:layout_marginLeft="300dp"
        android:textSize="20dp"
        android:textColor="@color/colorBlack"
        android:onClick="showAdminLogin"
        android:id="@+id/adminLogin_ID"
        />

</LinearLayout>